
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Carbon - Admin Template</title>
    <link rel="stylesheet" href="~/dist/vendor/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/dist/vendor/font-awesome/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/dist/css/styles.css">

    <!--WallPaper-->
    <link rel="stylesheet" type="text/css" href="~/css/LoginBG.css" />
</head>
<body >
    <div class="page-wrapper flex-row align-items-center">
        <div class="container" >
            <div class="row justify-content-center">
                <div class="col-md-5" >
                    <div class="card p-4 dgdgdgdsseg">
                        <div class="card-header text-center text-uppercase h4 font-weight-light" style="background-color: transparent; color:aliceblue; font-size:40px; font-weight:bold; font-family:'Verdana';">
                            Login
                        </div>
                        <div class="card-body py-5">
                            <div class="form-group">
                                <label class="form-control-label" style="color:aliceblue; font-size:17px;">Username</label>
                                <input type="email" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" style="color:aliceblue; font-size:17px">Password</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="custom-control custom-checkbox" style="color:aliceblue;">
                                        <input type="checkbox" class="custom-control-input" id="login">
                                        <label class="custom-control-label" for="login">Save Credentials</label>
                                    </div>
                                </div>                    
                            </div>
                        </div>
                        <div class="card-footer" style="background-color: transparent;">
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary px-5">Sign In</button>
                                </div>
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary px-5">Sign Up</button>
                                </div>

                            </div>

                            <div class="col-6">
                                <a href="#" class="btn btn-link">Forgot password?</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/dist/vendor/jquery/jquery.min.js"></script>
    <script src="~/dist/vendor/popper.js/popper.min.js"></script>
    <script src="~/dist/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/dist/vendor/chart.js/chart.min.js"></script>
    <script src="~/src/js/carbon.js"></script>
    <script src="~/src/js/demo.js"></script>
</body>
</html>

