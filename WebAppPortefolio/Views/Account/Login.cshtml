
@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <link href="~/src/AnimatedLoginScreen/bootstrap.min.css" rel="stylesheet" />
    <script src="~/src/AnimatedLoginScreen/jquery-1.11.1.min.js"></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Carbon - Admin Template</title>
    <link rel="stylesheet" href="~/dist/vendor/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/dist/vendor/font-awesome/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/dist/css/styles.css">

    <link href="~/css/LoginPageStyle.css" rel="stylesheet" />
</head>

<body>
    <div class="container">

        <div id="login-box">
            <div class="logo">
                <img src="~/Imagens/BabeFace.jpg" style="width:110px; height:110px;" class="img img-responsive img-circle center-block" />
                <h1 class="logo-caption" style="font-size:30px"><span class="tweak">L</span>ogin</h1>
            </div><!-- /.logo -->
            <div class="controls">
                <form action="/Account/Login" method="post">
                    <input type="text" id="usernam" name="usernam" placeholder="Username" class="form-control" style="font-size:17px; margin-bottom:10px;" />
                    <input type="password" id="passw" name="passw" placeholder="Password" class="form-control" style="font-size:17px" />
                    <button type="submit" class="btn btn-default btn-block btn-custom" style="height:35px; font-size:17px">Sign In</button>

                    <span style="display: inline;" class="col-12">
                        <button type="button" class="btn btn-default btn-custom" id="button1" style="height:35px; width:45%; font-size:17px;" onclick="location.href='@Url.Action("NewUser", "Account")'">Sign Up</button>
                        <button type="button" class="btn btn-default btn-custom" id="button2" style="height:35px; width:45%; font-size:17px;" onclick="location.href='@Url.Action("ForgotCredentials", "Account")'">Recover Password</button>
                    </span>
                </form>

            </div><!-- /.controls -->
        </div><!-- /#login-box -->        

    </div><!-- /.container -->

    <div id="particles-js"></div>

    <script src="~/js/LoginPageScript.js"></script>

    <script src="~/dist/vendor/jquery/jquery.min.js"></script>
    <script src="~/dist/vendor/popper.js/popper.min.js"></script>
    <script src="~/dist/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/dist/vendor/chart.js/chart.min.js"></script>
    <script src="~/src/js/carbon.js"></script>
    <script src="~/src/js/demo.js"></script>

</body>
</html>



